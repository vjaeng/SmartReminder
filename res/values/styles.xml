<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar" />

  <!-- ViberLabs Light -->

    <style name="Theme.Viberlabs_light" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_viberlabs_light</item>
        <item name="popupMenuStyle">@style/PopupMenu.Viberlabs_light</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Viberlabs_light</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Viberlabs_light</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Viberlabs_light</item>
        <item name="actionBarStyle">@style/ActionBar.Transparent.Viberlabs_light</item>
        <item name="actionModeBackground">@drawable/cab_background_top_viberlabs_light</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_viberlabs_light</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Viberlabs_light</item>


    </style>

    <style name="ActionBar.Solid.Viberlabs_light" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_viberlabs_light</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_viberlabs_light</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_viberlabs_light</item>
        <item name="progressBarStyle">@style/ProgressBar.Viberlabs_light</item>
    </style>

    <style name="ActionBar.Transparent.Viberlabs_light" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_viberlabs_light</item>
        <item name="progressBarStyle">@style/ProgressBar.Viberlabs_light</item>
    </style>

    <style name="PopupMenu.Viberlabs_light" parent="@style/Widget.Sherlock.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_viberlabs_light</item>
    </style>

    <style name="DropDownListView.Viberlabs_light" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_viberlabs_light</item>
    </style>

    <style name="ActionBarTabStyle.Viberlabs_light" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_viberlabs_light</item>
    </style>

    <style name="DropDownNav.Viberlabs_light" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_viberlabs_light</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_viberlabs_light</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_viberlabs_light</item>
    </style>

    <style name="ProgressBar.Viberlabs_light" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_viberlabs_light</item>
    </style>

    <style name="ActionButton.CloseMode.Viberlabs_light" parent="@style/Widget.Sherlock.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_viberlabs_light</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Viberlabs_light.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Viberlabs_light</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Viberlabs_light</item>
    </style>
   </resources>